<%= form_for @user do |f| %>
  <%= f.label :Username %>
  <%= f.text_field :username, placeholder: "Enter a unique username."%><br><br>
  <%= f.label :email %>
  <%= f.email_field :email, placeholder: "your_email@example.com" %><br><br>
  <%= f.label :password %>
  <%= f.password_field :password, placeholder: "Enter a STRONG password."%><br><br>
  <%= f.submit "Submit" %>
<% end %>